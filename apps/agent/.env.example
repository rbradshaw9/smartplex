# Example environment variables for SmartPlex Agent
# Copy this to .env and fill in your values

# Application Configuration
SMARTPLEX_ENV=development
DEBUG=true

# SmartPlex API Connection
SMARTPLEX_API_URL=https://smartplex-production.up.railway.app
SMARTPLEX_API_TOKEN=your-api-token-from-smartplex-dashboard
AGENT_ID=agent-your-server-name

# Plex Server Configuration (REQUIRED)
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your-plex-token-from-plex-settings

# Plex Library Paths (adjust to your setup)
PLEX_LIBRARY_PATHS=/data/media,/data/movies,/data/tv

# Storage Management
STORAGE_THRESHOLD_WARNING=85
STORAGE_THRESHOLD_CRITICAL=95
CLEANUP_ENABLED=false
CLEANUP_DRY_RUN=true

# Scheduling (cron expressions)
HEARTBEAT_INTERVAL_SECONDS=300
STORAGE_CHECK_CRON=0 */6 * * *
CLEANUP_CHECK_CRON=0 2 * * *

# Security
AGENT_API_KEY=your-agent-api-key