{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "cd apps/api && poetry install --no-dev"
  },
  "deploy": {
    "startCommand": "cd apps/api && poetry run uvicorn main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}